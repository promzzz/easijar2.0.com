<script type="text/javascript">
  $(function() {
    $(document).on('click', '.ajax-upload', function(){
      $(this).next('.file-upload').click();
    });
    $(document).on('change', '.file-upload', function(){
      var $this = $(this);
      var image = $this.val();
      var ele_id = $this.attr('id');
      if(!image.replace(/\s/gi, '').length) {
        return false;
      }
      ajaxUpload(ele_id);
    });
  });
  function ajaxUpload(ele_id)
  {
    var del_image = '';
    if(ele_id == 'file-placeholder') {
        del_image = 'placeholder';
    } else {
        del_image = 'no_image';
    }
    $.ajaxFileUpload({
      url : 'index.php?route=setting/setting/uploadImage&user_token={{ user_token }}',
      type : 'post',
      secureuri : false,
      fileElementId : ele_id,
      dataType : 'json',
      success : function(json){
        var code = json['code'];
        if(!code) {
          alert(json['message']);
          return false;
        }
        var e_class = $('#' + ele_id).attr('class');
        var e_name = $('#' + ele_id).attr('name');
        var e_id = $('#' + ele_id).attr('id');
        var parent = $('#' + ele_id).parent('div');
        $('#' + ele_id).prev('.ajax-upload').find('img').prop('src', json['thumb']);
        $('#' + ele_id).remove();
        parent.append('<input type="file" class="' + e_class + '" name="' + e_name + '" id="' + e_id + '" style="display:none;">');
        $.ajax({
          url: 'index.php?route=setting/setting/deleteUploadImage&prefix=' + del_image + '&user_token={{ user_token }}',
          type: 'get',
          dataType: 'json',
          success: function(json){

          }
        });
      },
      error:function(data,status,e){
        console.log(e);
      }
    });
  }
</script>

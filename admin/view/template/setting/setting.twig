		url: 'index.php?route=setting/setting/theme&user_token={{ user_token }}&theme=' + this.value,
		dataType: 'html',
		beforeSend: function() {
			$('select[name=\'config_theme_mobile\']').prop('disabled', true);
		},
		complete: function() {
			$('select[name=\'config_theme_mobile\']').prop('disabled', false);
		},
		success: function(html) {
			$('#theme-mobile').attr('src', html);
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});

$('select[name=\'config_theme\']').trigger('change');
$('select[name=\'config_theme_mobile\']').trigger('change');

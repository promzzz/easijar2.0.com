                    </div>
                    {% if error.image_location %}
                    <div class="text-danger">{{ error.image_location }}</div>
                    {% endif %}
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="tab-pane" id="tab-global">
              <fieldset>
                <legend>{{ text_popup_image_ad }}</legend>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-gd-mobile-add-to-cart-button-status">{{ entry_add_to_cart_button }}</label>
                  <div class="col-sm-10">
                    <select name="theme_mobile_add_to_cart_button_status" id="input-gd-mobile-add-to-cart-button-status" class="form-control">
                      {% if helper.old('theme_mobile_add_to_cart_button_status', setting.theme_mobile_add_to_cart_button_status ?? 1) %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="tab-pane" id="tab-footer">
              <fieldset>
                <legend>{{ text_copyright }}</legend>
                <ul class="nav nav-tabs" id="copyright">
                  {% for language in languages %}
                  <li><a href="#copyright{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                  {% endfor %}
                </ul>
                <div class="tab-content">
                  {% for language in languages %}
                  <div class="tab-pane" id="copyright{{ language.language_id }}">
                    <div class="form-group">
                      <div class="col-sm-12">
                        <textarea name="theme_mobile_copyright[{{ language.language_id }}]" placeholder="{{ entry_copyright }}" id="input-copyright{{ language.language_id }}" class="form-control tinymce">{{ helper.old("theme_mobile_copyright.#{language.language_id}", setting.theme_mobile_copyright[language.language_id]) }}</textarea>
                      </div>
                    </div>
                  </div>
                  {% endfor %}
                </div>
              </fieldset>
            </div>
            <div class="tab-pane" id="tab-popup-ad">
              <fieldset>
                <legend>{{ text_popup_image_ad }}</legend>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                  <div class="col-sm-10">
                    <select name="theme_mobile_popup_image_ad_status" id="input-status" class="form-control">
                      {% if helper.old('theme_mobile_popup_image_ad_status', setting.theme_mobile_popup_image_ad_status) %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-status">{{ entry_select_image }}</label>
                  <div class="col-sm-10">
                    <a href="" id="thumb-popup-image-ad" data-toggle="image" class="img-thumbnail"><img src="{{ helper.image_resize(helper.old('theme_mobile_popup_image_ad_image', setting.theme_mobile_popup_image_ad_image)) }}" alt="" title="" data-placeholder="{{ helper.image_resize() }}" /></a>
                    <input type="hidden" name="theme_mobile_popup_image_ad_image" value="{{ helper.old('theme_mobile_popup_image_ad_image', setting.theme_mobile_popup_image_ad_image) }}" id="input-popup-image-ad" />
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-popup-image-ad-href">{{ entry_url }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="theme_mobile_popup_image_ad_href" id="input-popup-image-ad-href" class="form-control" value="{{ helper.old('theme_mobile_popup_image_ad_href', setting.theme_mobile_popup_image_ad_href) }}" placeholder="{{ entry_url }}">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-homepage-only">{{ entry_homepage_only }}</label>
                  <div class="col-sm-10">
                    <select name="theme_mobile_popup_image_ad_home_only" id="input-homepage-only" class="form-control">
                      {% if helper.old('theme_mobile_popup_image_ad_home_only', setting.theme_mobile_popup_image_ad_home_only) %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="tab-pane" id="tab-homepage">
              <fieldset>
                <legend>{{ text_homepage_search }}</legend>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-status">{{ entry_homepage_search_bar_position }}</label>
                  <div class="col-sm-10">
                    {% set theme_mobile_homepage_search_bar_position = helper.old('theme_mobile_homepage_search_bar_position', setting.theme_mobile_homepage_search_bar_position ?? 'normal') %}
                    <select name="theme_mobile_homepage_search_bar_position" id="input-search-bar-position" class="form-control">
                      <option value="fixed" {% if theme_mobile_homepage_search_bar_position == 'fixed' %}selected="selected"{% endif %}>{{ text_fixed }}</option>
                      <option value="normal"{% if theme_mobile_homepage_search_bar_position == 'normal' %}selected="selected"{% endif %}>{{ text_normal }}</option>
                      <option value="none"{% if theme_mobile_homepage_search_bar_position == 'none' %}selected="selected"{% endif %}>{{ text_hide }}</option>
                    </select>
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="tab-pane" id="tab-category-page">
              <fieldset>
                <legend>{{ entry_category_style }}</legend>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-category-style">{{ entry_category_style }}</label>
                  <div class="col-sm-10">
                    {% set theme_mobile_category_page_style = helper.old('theme_mobile_category_page_style', setting.theme_mobile_category_page_style ?? 'flat') %}
                    <select name="theme_mobile_category_page_style" id="input-search-bar-position" class="form-control">
                      <option value="flat"{% if theme_mobile_category_page_style == 'flat' %}selected="selected"{% endif %}>{{ text_flat }}</option>
                      <option value="sidebar" {% if theme_mobile_category_page_style == 'sidebar' %}selected="selected"{% endif %}>{{ text_sidebar }}</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-category-brand-link-status">{{ entry_category_brand_link_status }}</label>
                  <div class="col-sm-10">
                    <select name="theme_mobile_category_brand_link_status" id="input-category-brand-link-status" class="form-control">
                      {% if helper.old('theme_mobile_category_brand_link_status', setting.theme_mobile_category_brand_link_status ?? 1) %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="tab-pane" id="tab-css">
              <fieldset>
                <legend>{{ tab_css }}</legend>
                <textarea name="theme_mobile_css" placeholder="{{ entry_css }}" id="input-css" class="form-control" rows="30">{{ helper.old('theme_mobile_css', setting.theme_mobile_css) }}</textarea>
              </fieldset>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


                    {% if error.image_additional %}
                    <div class="text-danger">{{ error.image_additional }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-image-related">{{ entry_image_related }}</label>
                  <div class="col-sm-10">
                    <div class="row">
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_related_width" value="{{ helper.old('theme_mobile_image_related_width', setting.theme_mobile_image_related_width ?? 80) }}" placeholder="{{ entry_width }}" id="input-image-related" class="form-control" />
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_related_height" value="{{ helper.old('theme_mobile_image_related_height', setting.theme_mobile_image_related_height ?? 80) }}" placeholder="{{ entry_height }}" class="form-control" />
                      </div>
                    </div>
                    {% if error.image_related %}
                    <div class="text-danger">{{ error.image_related }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-image-compare">{{ entry_image_compare }}</label>
                  <div class="col-sm-10">
                    <div class="row">
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_compare_width" value="{{ helper.old('theme_mobile_image_compare_width', setting.theme_mobile_image_compare_width ?? 90) }}" placeholder="{{ entry_width }}" id="input-image-compare" class="form-control" />
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_compare_height" value="{{ helper.old('theme_mobile_image_compare_height', setting.theme_mobile_image_compare_height ?? 90) }}" placeholder="{{ entry_height }}" class="form-control" />
                      </div>
                    </div>
                    {% if error.image_compare %}
                    <div class="text-danger">{{ error.image_compare }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-image-wishlist">{{ entry_image_wishlist }}</label>
                  <div class="col-sm-10">
                    <div class="row">
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_wishlist_width" value="{{ helper.old('theme_mobile_image_wishlist_width', setting.theme_mobile_image_wishlist_width ?? 47) }}" placeholder="{{ entry_width }}" id="input-image-wishlist" class="form-control" />
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_wishlist_height" value="{{ helper.old('theme_mobile_image_wishlist_height', setting.theme_mobile_image_wishlist_height ?? 47) }}" placeholder="{{ entry_height }}" class="form-control" />
                      </div>
                    </div>
                    {% if error.image_wishlist %}
                    <div class="text-danger">{{ error.image_wishlist }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-image-cart">{{ entry_image_cart }}</label>
                  <div class="col-sm-10">
                    <div class="row">
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_cart_width" value="{{ helper.old('theme_mobile_image_cart_width', setting.theme_mobile_image_cart_width ?? 50) }}" placeholder="{{ entry_width }}" id="input-image-cart" class="form-control" />
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_cart_height" value="{{ helper.old('theme_mobile_image_cart_height', setting.theme_mobile_image_cart_height ?? 50) }}" placeholder="{{ entry_height }}" class="form-control" />
                      </div>
                    </div>
                    {% if error.image_cart %}
                    <div class="text-danger">{{ error.image_cart }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-image-location">{{ entry_image_location }}</label>
                  <div class="col-sm-10">
                    <div class="row">
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_location_width" value="{{ helper.old('theme_mobile_image_location_width', setting.theme_mobile_image_location_width ?? 268) }}" placeholder="{{ entry_width }}" id="input-image-location" class="form-control" />
                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_location_height" value="{{ helper.old('theme_mobile_image_location_height', setting.theme_mobile_image_location_height ?? 50) }}" placeholder="{{ entry_height }}" class="form-control" />

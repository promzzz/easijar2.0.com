                      </div>
                      <div class="col-sm-6">
                        <input type="text" name="theme_mobile_image_category_height" value="{{ helper.old('theme_mobile_image_category_height', setting.theme_mobile_image_category_height ?? 80) }}" placeholder="{{ entry_height }}" class="form-control" />
                      </div>

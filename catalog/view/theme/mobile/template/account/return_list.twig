{{ header }}
<div class="container">
  <div class="row">
    <div id="content" class="col-sm-12">{{ content_top }}
      <div class="nav-bar">{{ heading_title }}</div>
      {% if returns %}
        {% for return in returns %}
        <div class="list-two-column-justified row widget">
          <div class="col-sm-12">
            <div class="list-head">
            <h2>{{ column_return_id }}:#{{ return.return_id }}</h2>
            <a href="{{ return.href }}" data-toggle="tooltip" title="{{ button_view }}" class="link">{{ button_view }} &gt;&gt;</a>
            </div>
            <dl>
              <dt>{{ column_status}}</dt>
              <dd>{{ return.status }}</dd>
              <dt>{{ column_date_added }}</dt>
              <dd>{{ return.date_added }}</dd>
              <dt>{{ column_order_id }}</dt>
              <dd>{{ return.order_id }}</dd>
              <dt>{{ column_customer }}</dt>
              <dd>{{ return.name }}</dd>
            </dl>
          </div>
        </div>
        {% endfor %}
        <div class="col-sm-12 text-center">{{ pagination }}</div>
      {% else %}
        <div class="row widget">
          <div class="col-xs-12">
            <div class="no-items">
              <div class="icon"><i class="iconfont">&#xe6a4;</i></div>
              <div class="msg">{{ text_no_results }}</div>
            </div>
          </div>
        </div>
      {% endif %}
      {{ content_bottom }}</div>
    </div>
</div>
{{ footer }}

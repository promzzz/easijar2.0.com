{{ header }}
<div class="container wishlist-page">
  <div class="row">
    <div id="content" class="col-sm-12">{{ content_top }}
      <div class="nav-bar">{{ heading_title }}</div>
      {% if success %}
      <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      <div class="row widget">
        <div class="col-sm-12">
          {% if products %}
          <div class="row">
            <div class="col-xs-12">
              {% for product in products %}
              <div class="wishlist-product-list">
                <div class="image"><a href="{{ product.href }}"><img data-src="{{ product.thumb }}" src="{{ placeholder }}" alt="{{ product.name }}" title="{{ product.name }}" class="lazy img-responsive" /></a></div>
                <div class="product-info">
                  <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                  <div class="model">{{ product.model }}</div>
                  <div class="stock">{{ product.stock }}</div>
                  {% if product.price %}
                  <div class="product-price">
                    <span class="price-new">{{ product.special ? product.special : product.price }}</span>
                    {% if product.special %}
                    <span class="price-old">{{ product.price }}</span>
                    {% endif %}
                  </div>
                  {% endif %}
                  <a href="{{ product.remove }}" data-toggle="tooltip" title="{{ button_remove }}" class="remove">[{{ button_remove }}]</a>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
          {% else %}
          <div class="no-items">
            <div class="icon"><i class="iconfont">&#xe635;</i></div>
            <div class="msg">{{ text_no_results }}</div>
          </div>
          {% endif %}
        </div>
      </div>
      {{ content_bottom }}</div>
  </div>
</div>
{{ footer }}

{{ header }}
<div class="container">
  <div class="row">
    <div id="content" class="col-sm-12">{{ content_top }}
      <div class="nav-bar">{{ heading_title }}</div>
      {% if success %}
      <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
      {% endif %}
      {% if error_warning %}
      <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
      {% endif %}
      <div class="row widget">
        <div class="col-sm-12">
          {% if addresses %}
          <table class="table table-bordered table-hover">
            {% for result in addresses %}
            <tr>
              <td class="text-left">
                {{ result.address }}
              </td>
              <td class="text-right" style="width: 25%">
                <a href="{{ result.update }}" class="btn btn-info btn-block">{{ button_edit }}</a>
                <a href="{{ result.delete }}" class="btn btn-danger btn-block">{{ button_delete }}</a>
              </td>
            </tr>
            {% endfor %}
          </table>
          {% else %}
          <div class="empty-placeholder">{{ text_no_results }}</div>
          {% endif %}
          <a href="{{ add }}" class="btn btn-primary btn-block">{{ button_new_address }}</a>
        </div>
      </div>
      {{ content_bottom }}</div>
    </div>
</div>
{{ footer }}

{{ header }}
<div id="product-manufacturer-list" class="container">
  {{ include(helper.template('_partial/breadcrumb')) }}
  <div class="row">
    <div id="content" class="col-xs-12">{{ content_top }}
      {% if categories %}
        {% if helper.config('theme_mobile_category_brand_link_status', 1) %}
        <div class="category-manufacturer-switch bottom-border">
          <a href="{{ helper.url.link('mobile/categories') }}">{{ text_category }}</a>
          <a href="{{ helper.url.link('product/manufacturer') }}"  class="active">{{ text_brand }}</a>
        </div>
        {% else %}
        <div class="nav-bar">{{ text_index }}</div>
        {% endif %}
        <div class="manufacturer-title">
          <p class="title">
            {% for category in categories %}
            &nbsp;&nbsp;&nbsp;<a href="index.php?route=product/manufacturer#{{ category.name }}">{{ category.name }}</a>
            {% endfor %}
          </p>
        </div>
        {% for category in categories %}
        <div class="manufacturer-list">
          <h2 id="{{ category.name }}">{{ category.name }}</h2>
          {% if category.manufacturer %}
          {% for manufacturers in category.manufacturer|batch(4) %}
          <div class="row widget">
            {% for manufacturer in manufacturers %}
              <div class="display-brand col-sm-3 col-xs-4">
                <a href="{{ manufacturer.href }}">
                  <img class="img-responsive" src="{{ manufacturer.thumb }}">
                  <span>{{ manufacturer.name }}</span>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
        {% endfor %}
        {% endif %}
        {% endfor %}
        {% else %}
        <p>{{ text_no_results }}</p>
        <div class="buttons clearfix">
          <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
        </div>
      {% endif %}
      {{ content_bottom }}
    </div>
    </div>
</div>
{{ footer }}

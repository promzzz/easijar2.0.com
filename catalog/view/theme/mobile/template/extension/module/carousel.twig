<div class="row owl-carousel-widget">
  <div class="col-xs-12">
    <div id="owlcarousel-carousel" class="swiper-container">
      <div class="swiper-wrapper">
        {% for banner in banners %}
        <div class="swiper-slide">
          {% if banner.link %}
          <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>
          {% else %}
          <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
          {% endif %}
        </div>
        {% endfor %}
        <div class="swiper-pagination"></div>
      </div>
    </div>
    <script type="text/javascript"><!--
      var carousel_swiper = new Swiper ('#owlcarousel-carousel', {
        loop: true,
        slidesPerView: 3,
        spaceBetween: 10,
        autoplay: {
          delay: 5000,
        }
      })
    --></script>
  </div>
</div>

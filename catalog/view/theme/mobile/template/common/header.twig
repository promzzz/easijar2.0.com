<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}

<!-- Facebook share -->
<meta property="og:site_name" content="{{ facebook_site_name }}" />
<meta property="og:url" content="{{ facebook_share_url }}" />
<meta property="og:type" content="{{ facebook_share_type }}" />
<meta property="og:title" content="{{ facebook_share_title }}" />
<meta property="og:description" content="{{ facebook_share_description }}" />
<meta property="og:image" content="{{ facebook_share_image }}" />
<meta property="og:image:width" content="{{ facebook_share_image_width }}" />
<meta property="og:image:height" content="{{ facebook_share_image_height }}" />
{% if facebook_share_type == 'product' %}
<meta property="product:price:amount" content="{{ facebook_product_price_amount }}" />
<meta property="product:price:currency" content="{{ facebook_product_price_currency }}" />
{% endif %}

<script src="{{ helper.url.jsLink('javascript/jquery/jquery-2.1.1.min.js') }}" type="text/javascript"></script>
<script src="{{ helper.url.jsLink('javascript/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
<script src="{{ helper.url.jsLink('javascript/layer/layer.js') }}" type="text/javascript"></script>
<script src="{{ helper.url.jsLink('theme/mobile/javascript/jquery.unveil.js') }}" type="text/javascript"></script>
<link href="{{ helper.url.cssLink('javascript/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
<link href="{{ helper.url.cssLink('javascript/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="{{ helper.url.jsLink('theme/mobile/javascript/common.js') }}" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
<link href="{{ helper.url.cssLink('theme/mobile/stylesheet/stylesheet.css') }}" rel="stylesheet">
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
{{ helper.debug_bar.renderHead }}
</head>
<body class="{{ class }}" ontouchstart="" onmouseover="">

{% if not modal %}
{% if helper.config("module_chat_meiqia") is not empty %}
<a class="btn-meiqia"><i class="iconfont">&#xe607;</i></a>
<script type='text/javascript'>
  (function(m, ei, q, i, a, j, s) {
    m[i] = m[i] || function() {
      (m[i].a = m[i].a || []).push(arguments)
    };
    j = ei.createElement(q),
      s = ei.getElementsByTagName(q)[0];
    j.async = true;
    j.charset = 'UTF-8';
    j.src = 'https://static.meiqia.com/dist/meiqia.js?_=t';
    s.parentNode.insertBefore(j, s);
  })(window, document, 'script', '_MEIQIA');
  _MEIQIA('entId', '{{ helper.config("module_chat_meiqia") }}');
  _MEIQIA('language', '{{ helper.is_zh_cn() ? "zh" : "en" }}');
  _MEIQIA('manualInit'); // 在这里开启手动模式
  _MEIQIA('withoutBtn'); // 不显示默认按钮
  _MEIQIA('init');

  $(document).on('click', '.btn-meiqia', function(event) {
    _MEIQIA('showPanel');
  });
</script>
{% endif %}
<a href="#page-top" class="go-top"><i class="iconfont">&#xe6fe;</i></a>
{% endif %}

{% if (popup_image_ad.image) and ( popup_image_ad.home_only or (class == 'common-home' and popup_image_ad.home_only)) %}
<div class="home-popup">
  <div class="popup-inner">
    <span class="close-popup"><i class="iconfont">&#xe633;</i></span>
    {% if popup_image_ad.href %}
    <a href="{{ popup_image_ad.href }}">
      <img src="{{ popup_image_ad.image }}" class="img-responsive">
    </a>
    {% else %}
    <img src="{{ popup_image_ad.image }}" class="img-responsive">
    {% endif %}
  </div>
</div>
{% endif %}

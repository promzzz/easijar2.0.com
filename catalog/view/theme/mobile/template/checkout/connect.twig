{{ header }}
<div class="breadcrumb">
  <div class="container">
    <h1>{{ heading_title }}</h1>
  </div>
</div>
<div id="quick-checkout-connect" class="container">
  <div class="row">
    <div id="content" class="col-xs-12">{{ content_top }}
      <div class="nav-bar">{{ text_success }}</div>
      <div class="row">
        <div class="quick-checkout-connect-wrapper">
          <div class="order-info">
            <div class="success-icon">
              <i class="iconfont">&#xe61f;</i>
            </div>
            <ul class="list-unstyled">
              <li><strong>{{ column_order_id }}</strong>{{ order_id }}</li>
              <li><strong>{{ column_total }}</strong>{{ total }}</li>
              {% if shipping_method %}
              <li><strong>{{ column_shipping_method }}</strong>{{ shipping_method }}</li>
              {% endif %}
              <li><strong>{{ column_payment_method }}</strong>{{ payment_method }}</li>
            </ul>
          </div>
          {% if payment_view %}
          <div id="payment-confirm-wrapper">
            <hr>
            <p class="text-center"><strong>{{ text_note }}</strong></p>
            <hr>
            {{ payment_view }}
          </div>
          {% endif %}
        </div>
      </div>
      {{ content_bottom }}</div>
    </div>
</div>
{{ footer }}

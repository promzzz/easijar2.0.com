{% extends helper.template("seller/_partial/layout") %}
{% block content %}
    <div id="content" class="col-sm-12">
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    {% if error_warning %}
    <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}
      <div class="content-wrapper">
        <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-review" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-text">{{ entry_text }}</label>
            <div class="col-sm-10">
              <textarea name="text" disabled cols="60" rows="8" placeholder="{{ entry_text }}" id="input-text" class="form-control">{{ text }}</textarea>
              {% if error_text %}
                <div class="text-danger">{{ error_text }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_rating }}</label>
            <div class="col-sm-10">
              <label class="radio-inline"> {% if rating == 1 %}
                  <input type="radio" disabled name="rating" value="1" checked="checked"/>
                  1
                {% else %}
                  <input type="radio" disabled name="rating" value="1"/>
                  1
                {% endif %} </label> <label class="radio-inline"> {% if rating == 2 %}
                  <input type="radio" disabled name="rating" value="2" checked="checked"/>
                  2
                {% else %}
                  <input type="radio" disabled name="rating" value="2"/>
                  2
                {% endif %} </label> <label class="radio-inline"> {% if rating == 3 %}
                  <input type="radio" disabled name="rating" value="3" checked="checked"/>
                  3
                {% else %}
                  <input type="radio" disabled name="rating" value="3"/>
                  3
                {% endif %} </label> <label class="radio-inline"> {% if rating == 4 %}
                  <input type="radio" disabled name="rating" value="4" checked="checked"/>
                  4
                {% else %}
                  <input type="radio" disabled name="rating" value="4"/>
                  4
                {% endif %} </label> <label class="radio-inline"> {% if rating == 5 %}
                  <input type="radio" disabled name="rating" value="5" checked="checked"/>
                  5
                {% else %}
                  <input type="radio" disabled name="rating" value="5"/>
                  5
                {% endif %} </label>
              {% if error_rating %}
                <div class="text-danger">{{ error_rating }}</div>
              {% endif %} </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-push-2">
              {% for image in images %}
              <img style="width:150px; height:150px; " src="image/{{ image.image }}"></img>
              {% endfor %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" disabled id="input-status" class="form-control">
                {% if status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
      </div>
    </div>
{% endblock %}
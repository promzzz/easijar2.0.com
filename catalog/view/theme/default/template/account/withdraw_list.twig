{{ header }}
{{ include(helper.template('_partial/breadcrumb')) }}
<div id="account-address" class="container">
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h2>{{ heading_title }}</h2>
      <div class="clearfix mb-1">
        <span>{{ text_total }}</span> <b>{{ total }}</b>
        <a href="{{ recharge }}" class="btn btn-primary pull-right">{{ button_withdraw }}</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="text-left">{{ column_date_added }}</th>
              <th class="text-left">{{ column_message }}</th>
              <th class="text-left">{{ column_bank_account }}</th>
              <th class="text-right">{{ column_amount }}</th>
              <th class="text-right">{{ column_status }}</th>
              <th class="text-right">{{ column_refused }}</th>
            </tr>
          </thead>
          <tbody>
            {% if withdraws %}
            {% for withdraw in withdraws %}
            <tr>
              <td class="text-left">{{ withdraw.date_added }}</td>
              <td class="text-left">{{ withdraw.message }}</td>
              <td class="text-left">{{ withdraw.bank_account }}</td>
              <td class="text-right">{{ withdraw.amount }}</td>
              <td class="text-right">{{ withdraw.status ? text_withdraw_status_1 : text_withdraw_status_0 }}</td>
              <td class="text-right">{{ withdraw.refused ? text_withdraw_refused_1 : text_withdraw_refused_0 }}</td>
            </tr>
            {% endfor %}
            {% else %}
            <tr>
              <td class="text-center" colspan="6">{{ text_empty }}</td>
            </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
      {{ include(helper.template('_partial/pagination')) }}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}

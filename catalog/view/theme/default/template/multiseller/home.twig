{{ header }}
{{ include(helper.template('_partial/breadcrumb')) }}
<div class="container">
  <div class="row">{{ column_left }}
    {% if column_left %}
    {% set class = 'col-sm-6' %}
    {% else %}
    {% set class = 'col-sm-9' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <div class="multiseller-banner multiseller-content-wrapper">
        <img src="{{ banner }}" alt="" class="img-responsive" />
      </div>

      {% if products %}
      <div class="mt-3 multiseller-content-wrapper">
        <h3 class="widget-title"><span>{{ text_latest }}</span></h3>
        <div class="row"> {% set i = 0 %}
          {% for product in products %}
          {% if column_left %}
          {% set class = 'col-xs-8 col-sm-6' %}
          {% else %}
          {% set class = 'col-xs-6 col-md-4' %}
          {% endif %}
          <div class="{{ class }}">
            {{ include(helper.template('_partial/product/product_single')) }}
          </div>
          {% if column_left and column_right and (i + 1) % 2 == 0 %}
          <div class="clearfix visible-md visible-sm"></div>
          {% elseif column_left or column_right and (i + 1) % 3 == 0 %}
          <div class="clearfix visible-md"></div>
          {% elseif (i + 1) % 4 == 0 %}
          <div class="clearfix visible-md"></div>
          {% endif %}
          {% set i = i + 1 %}
          {% endfor %}
        </div>
      </div>
      {% endif %}
      {{ content_bottom }}
    </div>
    <aside class="col-sm-3 hidden-xs">
      <div class="avatar-wrapper multiseller-content-wrapper">
        <div class="img">
          <img src="{{ helper.image_resize(store_avatar, 200, 200) }}" alt="" class="img-responsive" />
        </div>
        <div class="shop-info">
          <h3>{{ store_name }}</h3>
          <p>{{ company }}</p>
          <p class="text-muted description">{{ description }}</p>
        </div>
        <a href="{{ href_all }}" class="btn btn-primary mt-1">{{ button_all }}</a>
      </div>
    </aside>
  </div>
</div>
{{ footer }}

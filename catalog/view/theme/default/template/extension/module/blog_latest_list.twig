{% if heading_title %}
<h3 class="widget-title"><span>{{ heading_title }}</span></h3>
{% endif %}
<div class="module-blog-latest default-border mb-3">
  <ul class="list-unstyled">
    {% for post in posts %}
    <li>
      <a href="{{ post.href('show') }}" title="{{ post.localizedDescription().name }}">
        {{ post.localizedDescription().name }}
      </a>
    </li>
    {% endfor %}
  </ul>
</div>





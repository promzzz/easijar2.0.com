<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="swiper-viewport module-slideshow">
        <div id="slideshow{{ module }}" class="swiper-container">
          <div class="swiper-wrapper">
            {% for banner in banners %}
            <div class="swiper-slide">
              <div class="swiper-slide-inner text-center">
                {% if banner.link %}
                  <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>
                {% else %}
                  <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
                {% endif %}
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
        <div class="swiper-pagination slideshow{{ module }}"></div>
        <div class="swiper-pager">
          <div class="swiper-button-next slideshow-next{{ module }}"></div>
          <div class="swiper-button-prev slideshow-prev{{ module }}"></div>
        </div>
      </div>
      <script type="text/javascript"><!--
      var slideshow{{ module }}_swiper = new Swiper('#slideshow{{ module }}', {
        effect : 'fade',
        slidesPerView: 1,
        pagination: {el: '.slideshow{{ module }}'},
        navigation: {
          nextEl: '.slideshow-next{{ module }}',
          prevEl: '.slideshow-prev{{ module }}',
        },
        autoplay: {
          delay: 3000,
          disableOnInteraction: false
        },
        loop: true,
      });
      $('.module-slideshow').hover(function() {
        slideshow{{ module }}_swiper.autoplay.stop();
      }, function() {
        slideshow{{ module }}_swiper.autoplay.start();
      });
      --></script>
    </div>
  </div>
</div>


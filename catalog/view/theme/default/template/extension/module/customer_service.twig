<div class="module-customer-service pt-4 pb-2">
  <div class="container">
    <div class="row">
      {% set class = "col-md-#{12 / items|length} col-sm-#{12 / items|length} col-xs-12" %}
      {% for item in items %}
      <div class="{{ class }} item">
        <div class="icon"><img src="{{ helper.image_resize(item.image, 55, 55) }}" class="img-responsive"></div>
        <div class="text">
          <div class="title">{{ item.title }}</div>
          <div class="sub-title">{{ item.subtitle }}</div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

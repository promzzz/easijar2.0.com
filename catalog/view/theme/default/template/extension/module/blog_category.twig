{% if heading_title %}
<h3 class="widget-title"><span>{{ heading_title }}</span></h3>
{% endif %}
<div class="module-blog-category default-border mb-3">
  <ul class="list-unstyled">
    {% for category in categories %}
    <li>
      <a href="{{ category.href('show') }}" title="{{ category.localizedDescription().name }}">
        {{ category.localizedDescription().name }}
      </a>
    </li>
    {% endfor %}
  </ul>
</div>

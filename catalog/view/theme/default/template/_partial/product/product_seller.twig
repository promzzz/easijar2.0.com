{% if store_name %}
  <div>
    <image style="float:left;padding-right:5px;" src="{{ store_avatar }}" width="50" height="50"></image>
    <ul class="list-unstyled product-attribute">
      <li><a href="{{ store_url }}"><span>{{ store_name }}</span></a></li>
      <li><span>{{ store_address }}</span></li>
    </ul>
  </div>
  <div class="clearfix"></div>
{% endif %}
